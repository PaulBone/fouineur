{
  "manifest_version": 2,
  "name": "Fouineur",
  "description": "Plot profiler markers",
  "version": "0.0.3",
  "icons": {
    "48": "icons/icon.png",
    "96": "icons/icon2x.png"
  },
  "background": {
    "scripts": ["background_script.js"]
  },

  "browser_action": {
    "default_icon": {
      "48": "icons/icon.png",
      "96": "icons/icon2x.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["*://profiler.firefox.com/*"],
      "css": ["style.css"]
    }
  ],
  "permissions": ["activeTab", "storage"],
  "browser_specific_settings": {
    "gecko": {
      "id": "{15d00dcc-beb4-4c20-a85a-e51a16ab5a1c}"
    }
  }
}
